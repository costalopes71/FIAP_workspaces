@model _07.FIAP.WEB.MVC.Models.Jogador

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar Jogador</h2>

@if (TempData["msgSucesso"] != null)
{
<div class="alert alert-success">
    <strong>@TempData["msgSucesso"]</strong>
</div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(j => j.Nome)
        @Html.TextBoxFor(j => j.Nome, new { @class = "form-control", placeholder = "Digite o nome do jogador" })
    </div>

    <div class="form-group">
        @Html.LabelFor(j => j.DataNascimento)
        @Html.TextBoxFor(j => j.DataNascimento, new { @class = "form-control", placeholder = "Digite a data de nascimento do jogador" })
    </div>

    <div class="form-group">
        @Html.LabelFor(j => j.Time)
        @Html.DropDownListFor(j => j.TimeId, 
           ViewBag.times as SelectList,
           "Selecione",
           new { @class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(j => j.Posicao)
        @Html.EnumDropDownListFor(j => j.Posicao, "Selecione", new { @class = "form-control"})
    </div>

    <input type="submit" value="Cadastrar" class="btn btn-primary"/>

}