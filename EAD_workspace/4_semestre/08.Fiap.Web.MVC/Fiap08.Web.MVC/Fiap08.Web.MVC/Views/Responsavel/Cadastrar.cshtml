@model Fiap08.Web.MVC.Models.Responsavel

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@if (TempData["msgErro"] != null)
{
    <div class="alert alert-danger">
        <strong>@TempData["msgErro"]</strong>
    </div>
}

@if (TempData["msgSucesso"] != null)
{
    <div class="alert alert-success">
        <strong>@TempData["msgSucesso"]</strong>
    </div>
}


@using (Html.BeginForm())
{

    <div class="form-group">
        @Html.LabelFor(r => r.Nome)
        @Html.TextBoxFor(r => r.Nome, new { @class = "form-control", placeholder = "Nome do responsável" })
    </div>

    <div class="form-group">
        @Html.LabelFor(r => r.Telefone)
        @Html.TextBoxFor(r => r.Telefone, new { @class = "form-control", placeholder = "Digite o telefone" })
    </div>

    <input type="submit" class="btn btn-primary" value="Cadastrar" />

}
