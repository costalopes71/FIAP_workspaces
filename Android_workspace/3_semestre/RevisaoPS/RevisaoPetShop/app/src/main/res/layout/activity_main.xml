<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activities_padding"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escolha qual cachorro deseja:"
        android:textSize="@dimen/titulos_principais"
        android:textStyle="bold"
        android:textColor="@color/titles_colors"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rdgRacas">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/boder_collier"
            android:id="@+id/rbBoderCollie"
            android:layout_marginTop="@dimen/margem_superior_secoes"
            android:checked="true"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pit_bull"
            android:id="@+id/rbPitBull"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pastor AlemÃ£o R$700,00"
            android:id="@+id/rbPastorAlemao"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pastor Canadense R$800,00"
            android:id="@+id/rbPastorCanadense"/>

    </RadioGroup>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/femea"
        android:id="@+id/chkFemea"
        android:layout_marginTop="@dimen/margem_superior_secoes"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/adestrado"
        android:id="@+id/chkAdestrado"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Com todas vacinas em dia"
        android:id="@+id/chkVacinas"
        android:checked="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calcular"
        android:onClick="calcular"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/valor_total"
        android:textSize="34sp"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margem_superior_secoes"
        android:id="@+id/tvValorTotal"/>

</LinearLayout>