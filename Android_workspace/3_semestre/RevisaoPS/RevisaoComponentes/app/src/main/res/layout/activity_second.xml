<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#c1afaf"
    android:padding="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Complete seus dados"
                    android:textColor="@color/cor_preta"
                    android:textSize="@dimen/tamanho_titulos"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/margin_top_secoes"
                    android:id="@+id/tituloPag2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data de nascimento: "
                    android:textColor="@color/cor_preta"
                    android:textSize="20sp"
                    android:layout_marginTop="@dimen/margin_top_secoes"
                    android:textAlignment="center"/>

                <DatePicker
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:calendarTextColor="@color/cor_preta"
                    android:id="@+id/dtpNascimento"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Horário da meditacao"
                android:textColor="@color/cor_preta"
                android:textSize="20dp"
                android:textAlignment="center"/>

            <TimePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner"
                android:id="@+id/tmpMeditacao"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Escolha seu estado"
                android:textColor="@color/cor_preta"
                android:textSize="20dp"
                android:textAlignment="center"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spnEstado"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Digite o nome do país"
                android:textColor="@color/cor_preta"
                android:textSize="20dp"
                android:textAlignment="center"/>

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/actPais"
                android:layout_gravity="center"/>

        </LinearLayout>

    </ScrollView>

    </LinearLayout>